# GitLab MCP Server Configuration
# Copy this file to .env and update with your values

# Required: GitLab Personal Access Token
# Create at: GitLab → User Settings → Access Tokens
# Required scopes: read_api, read_repository, read_user
GITLAB_PERSONAL_ACCESS_TOKEN=your_gitlab_token_here

# Optional: GitLab API URL (default: https://gitlab.com/api/v4)
# For self-hosted GitLab instances, change this to your domain
GITLAB_API_URL=https://gitlab.com/api/v4

# Optional: Server port for SSE transport (default: 3000)
PORT=3000

# Optional: Use Server-Sent Events transport instead of stdio (default: false)
USE_SSE=false

# Optional: Enable read-only mode (default: false)
# In read-only mode, only read operations are available
GITLAB_READ_ONLY_MODE=false